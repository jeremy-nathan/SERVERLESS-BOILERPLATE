{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    // "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "removeComments": false,
    "skipLibCheck": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "watch": true,
    "target": "ES2020",
    "lib": [
      "ESNext",
    ],
    "types": [
      "reflect-metadata",
      "express",
    ],
    "pretty": true,
    "sourceMap": true,
    // "outDir": ".esbuild/.build",
    "baseUrl": "./",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "src/types/*",
        "node_modules/@types/*",
        "*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/public/*.json",
    "src/views/*",
    "config/**/*",
  ],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.spec.ts",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "*.config.js",
    "env_config.js",
    "esbuild-plugins.js",
    "**/*.js"
  ]
}
